{
  "name": "beyond_words",
  "version": "0.1.0",
  "description": "Meteor app for the Beyond Words exhibition",
  "main": "bundle/main.js",
  "dependencies": {
    "add2calendar": "^1.0.0",
    "gm": "^1.23.0",
    "ion-rangeslider": "^2.1.4",
    "linkifyjs": "^2.0.4",
    "material-ui": "^0.15.1",
    "modernizr": "^3.3.1",
    "moment-timezone": "^0.5.4",
    "openseadragon": "^2.2.1",
    "pseries": "^2.0.0",
    "react": "^15.2.1",
    "react-addons-create-fragment": "^15.0.2",
    "react-addons-css-transition-group": "^15.0.2",
    "react-addons-linked-state-mixin": "^15.0.2",
    "react-addons-perf": "^15.0.2",
    "react-addons-pure-render-mixin": "^15.0.2",
    "react-addons-test-utils": "^15.0.2",
    "react-addons-transition-group": "^15.0.2",
    "react-addons-update": "^15.0.2",
    "react-dom": "^15.2.1",
    "react-list": "^0.7.18",
    "react-masonry-component": "^4.2.1",
    "react-mounter": "^1.2.0",
    "react-slick": "^0.13.6",
    "react-tap-event-plugin": "^1.0.0",
    "slug": "^0.9.1",
    "throttle-debounce": "^1.0.1",
    "twit": "^2.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.archimedesdigital.io:archimedes/beyond_words.git"
  },
  "scripts": {
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "eslint . --ext .js,.jsx --fix",
    "lint:css": "stylelint \"imports/**/*.{css,less,scss,sss}\"",
    "lint:css:fix": "stylelint \"imports/**/*.{css,less,scss,sss}\" --fix",
    "lint:staged": "lint-staged",
    "lint": "npm run lint:js",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "npm run test -- --reporter min --watch",
    "start": "MONGO_URL=mongodb://localhost:27017/beyondWords meteor --settings=./private/settings/production.json"
  },
  "cssModules": {
    "ignorePaths": [
      "node_modules"
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "moduleNameMapper": {
      "^meteor/accounts-base": "<rootDir>/imports/mocks/accountsBase.js",
      "^meteor/alanning:roles": "<rootDir>/imports/mocks/roles.js",
      "^meteor/aldeed:simple-schema": "<rootDir>/imports/mocks/simpleSchema.js",
      "^meteor/kadira:dochead": "<rootDir>/imports/mocks/docHead.js",
      "^meteor/meteor": "<rootDir>/imports/mocks/meteor.js",
      "^meteor/react-meteor-data": "<rootDir>/imports/mocks/reactMeteorData.js",
      "^meteor/session": "<rootDir>/imports/mocks/session.js",
      "^meteor/momentjs:moment": "<rootDir>/imports/mocks/moment.js",
      "^meteor/edgee:slingshot": "<rootDir>/imports/mocks/slingshot.js",
      "^meteor/random": "<rootDir>/imports/mocks/random.js"
    },
    "setupFiles": [
      "<rootDir>/imports/mocks/env.js"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/jest-css-modules"
    }
  },
  "lint-staged": {
    "*.{md,sh,txt,xml,html,json}": [
      "editorconfig-tools fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "pre-commit": [
    "test"
  ]
  "author": "",
  "license": "MIT"
}
